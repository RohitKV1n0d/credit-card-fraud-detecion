{
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "justMyCode":false,
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "development"
            },
            "args": [
                "--debug",
                "run"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}",
            "python": "${command:python.interpreterPath}",
        }
    ]
}